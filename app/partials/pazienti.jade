div
  .page-header
    .row
      h1(style='color: rgb(0, 68, 204);') Pazienti
      lead Elenco dei pazienti
  div(ng-controller='PazientiElencoCtrl')    
    form.row
      .input-group.col-md-3
        input.form-control(type='text', ng-model='query', placeholder='ricerca rapida')   
        span.input-group-addon
          i.glyphicon.glyphicon-search
    
    br
    img(src='/img/crying.svg', ng-hide='(pazienti.length == 0) || (pazienti | filter:query).length > 0')
    
    table.table-striped.table-bordered.table-hover(
      ng-hide='(pazienti | filter:query).length == 0')
      thead(style='background-color: rgba(82, 168, 236, 0.8);')
        tr
          th Cod. 
          th Nome
          th Et√†
          th Data diagnosi
          th Malattia
          th Inizio terapia
          th Visualizza 
      tbody
        tr(ng-repeat='paziente in pazienti | filter:query')
          td.col-md-1(align='center')  {{paziente.idPAZIENTE}}
          td                  {{ paziente.NOME }} {{ paziente.COGNOME }}
          td.col-md-1(align='right')   
            span(tooltip-placement='left', tooltip='{{ paziente.DATA_NASCITA | date:"dd/MM/yyyy" }}')
              {{paziente.eta}} anni
          td.col-md-2 &nbsp;
            span(tooltip-placement='left', tooltip='{{ paziente.DATA_DIAGNOSI | date:"dd/MM/yyyy"}}')
              {{ paziente.DATA_DIAGNOSI | fromNow }}
          td.col-md-2 &nbsp;     {{paziente.MALATTIA}}
          td.col-md-1(align='right')   {{ paziente.DATA_TERAPIA | date:"dd/MM/yyyy"}}
          td.col-md-1(align='center') 
            a(ng-href='#/pazienti/{{paziente.idPAZIENTE}}') dettaglio
br            
